{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "pNotepad Plus",
  "outputfilename": "pnotepad-plus",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "Jonathan Hecl",
    "email": "jonathanhecl@gmail.com"
  },
  "info": {
    "productVersion": "2.0.0",
    "productName": "pNotepad Plus",
    "copyright": "Copyright 2025 Jonathan Hecl",
    "comments": "Secure Text Editor Plus"
  },
  "mac": {
    "documentTypes": [{
      "name": "Secure Text",
      "extensions": ["stxt"],
      "role": "Editor"
    }]
  },
  "windows": {
    "icon": "build/windows/icon.ico",
    "info": "build/windows/info.json",
    "fileAssociations": [{
      "ext": ".stxt",
      "name": "Secure Text File",
      "description": "Secure Text Document"
    }]
  }
}
